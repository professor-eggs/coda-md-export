{
  "manifest_version": 3,
  "name": "Coda Markdown Export",
  "version": "1.0.1",
  "description": "Export Coda pages as Markdown files",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "downloads", "clipboardWrite", "tabs"],
  "host_permissions": ["https://coda.io/*", "https://*.coda.io/*", "https://*.amazonaws.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export Coda Page as Markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://coda.io/*", "https://*.coda.io/*"],
      "js": ["content.js"]
    }
  ]
}
